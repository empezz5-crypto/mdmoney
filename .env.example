# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_with_random_secret
GOOGLE_CLIENT_ID=replace_with_google_client_id
GOOGLE_CLIENT_SECRET=replace_with_google_client_secret
ALLOWED_GOOGLE_EMAIL=your@email.com

# API URL for Next.js client
NEXT_PUBLIC_API_URL=http://localhost:3001

# Firebase (Client)
NEXT_PUBLIC_FIREBASE_API_KEY=replace_with_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=replace_with_firebase_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=replace_with_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=replace_with_firebase_storage_bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=replace_with_firebase_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=replace_with_firebase_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=replace_with_firebase_measurement_id

# n8n webhook
N8N_WEBHOOK_URL=https://your-n8n-domain/webhook/shorts

# Web Push (VAPID)
VAPID_PUBLIC_KEY=replace_with_vapid_public_key
VAPID_PRIVATE_KEY=replace_with_vapid_private_key
VAPID_SUBJECT=mailto:you@example.com
PUSH_CRON_SECRET=replace_with_push_cron_secret
ENABLE_LOCAL_SCHEDULER=true

# MongoDB (optional for existing moneyreport features)
MONGODB_URI=mongodb://localhost:27017/moneyreport
